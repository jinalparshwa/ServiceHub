<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_my_order"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.servicehub.Employee.NewInquiryActivity">

    <RelativeLayout
        android:id="@+id/rr1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <ImageView
            android:id="@+id/back"
            android:layout_width="@dimen/_30dp"
            android:layout_height="@dimen/_30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_10dp"
            android:src="@drawable/ic_back" />

        <com.servicehub.Custom_Compo.CustomTextview
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/__3dp"
            android:text="My Inquiry"
            android:textColor="@android:color/black"
            android:textSize="@dimen/_18_sp"
            android:layout_centerVertical="true"
            android:layout_alignTop="@+id/back"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/customTextview2" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rr2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ll_bottom"
        android:layout_below="@+id/rr1">

        <ListView
            android:id="@+id/listview_Newinquiry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@null"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>


    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/_60dp"
            android:layout_weight="1"
            android:background="@color/colorGreen"
            android:orientation="vertical">

            <com.servicehub.Custom_Compo.CustomTextview_Bold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_20dp"
                android:layout_marginTop="@dimen/_10dp"
                android:text="TOTAL_NO_OF_JOBS"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_12_sp" />


            <com.servicehub.Custom_Compo.CustomTextview_Bold
                android:id="@+id/txt_total_job"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_20dp"
                android:text=""
                android:textColor="@android:color/white"
                android:textSize="@dimen/_18_sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/_60dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.6"
            android:orientation="vertical"
            android:background="@color/colorgreen_dark"
            android:gravity="center_horizontal">


            <com.servicehub.Custom_Compo.CustomTextview_Bold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/_20dp"
                android:layout_marginTop="@dimen/__3dp"
                android:padding="@dimen/__3dp"
                android:text="INR"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_12_sp" />

            <com.servicehub.Custom_Compo.CustomTextview_Bold
                android:id="@+id/txt_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:padding="@dimen/__3dp"
                android:text=""
                android:layout_marginLeft="@dimen/_10dp"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_18_sp" />


        </LinearLayout>


    </LinearLayout>

</RelativeLayout>
