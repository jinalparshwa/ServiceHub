<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_book_service"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.servicehub.Activity.Book_Service">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <include layout="@layout/toolbar" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_150dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="2">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_150dp"
                    android:layout_weight="1.3">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_150dp"
                        android:src="@drawable/round" />

                    <RelativeLayout
                        android:layout_width="@dimen/_115dp"
                        android:layout_height="@dimen/_115dp"
                        android:layout_alignParentRight="true"

                        android:layout_marginTop="@dimen/_20dp">


                        <LinearLayout
                            android:layout_width="@dimen/_110dp"
                            android:layout_height="@dimen/_110dp"
                            android:layout_marginTop="@dimen/_4.5dp"
                            android:background="@drawable/circle_shadow"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/service_image"
                                android:layout_width="@dimen/_25dp"
                                android:layout_height="@dimen/_25dp"
                                android:layout_marginTop="@dimen/_25dp"
                                android:src="@drawable/electrical" />

                            <com.servicehub.Custom_Compo.CustomTextview
                                android:id="@+id/service_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5dp"
                                android:text="Locate me"
                                android:textColor="@android:color/black"
                                android:textSize="@dimen/_12_sp" />


                        </LinearLayout>

                        <ImageView
                            android:layout_width="@dimen/_25dp"
                            android:layout_height="@dimen/_25dp"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="@dimen/_7dp"
                            android:src="@drawable/arrow_right_bg" />

                    </RelativeLayout>


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.7">


                    <!--<RelativeLayout-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="@dimen/_50dp"-->
                    <!--android:layout_centerVertical="true"-->
                    <!--android:layout_marginLeft="@dimen/_15dp">-->

                    <!--<ImageView-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="@dimen/_50dp"-->
                    <!--android:src="@drawable/hire" />-->

                    <!--<com.servicehub.Custom_Compo.CustomTextview-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_centerInParent="true"-->
                    <!--android:text="Hire"-->
                    <!--android:textAllCaps="true"-->
                    <!--android:textSize="@dimen/_15_sp"-->
                    <!--android:textColor="@android:color/white" />-->


                    <!--</RelativeLayout>-->


                </RelativeLayout>

            </LinearLayout>

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_25dp"
            android:layout_marginBottom="@dimen/_10dp"
            android:layout_marginLeft="@dimen/_20dp"
            android:layout_marginRight="@dimen/_20dp"
            android:layout_marginTop="@dimen/_10dp"
            android:orientation="horizontal">

            <com.servicehub.Custom_Compo.CustomTextview_Rupee
                android:id="@+id/tv_rupee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/__3dp"
                android:gravity="start"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_15dp" />

            <com.servicehub.Custom_Compo.CustomTextview
                android:id="@+id/tv_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:orientation="horizontal"
                android:text=""
                android:textColor="@android:color/black"
                android:textSize="@dimen/ac_veri_tag_text_size" />

            <com.servicehub.Custom_Compo.CustomTextview
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:orientation="horizontal"
                android:text="/Hr"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_13_sp" />


        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="@dimen/_20dp"
            android:layout_marginRight="@dimen/_20dp"
            android:background="@color/colorgray" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_10dp"
            android:layout_marginLeft="@dimen/_20dp"
            android:layout_marginRight="@dimen/_20dp"
            android:layout_marginTop="@dimen/_10dp"
            android:orientation="horizontal"
            android:weightSum="2">


            <com.servicehub.Custom_Compo.CustomTextview
                android:id="@+id/customTextview"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:orientation="horizontal"
                android:text="Select Hour"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_15_sp" />


            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:gravity="right">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="@dimen/_10dp"
                    android:layout_height="@dimen/_10dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_5dp"
                    android:src="@drawable/down" />

                <com.servicehub.Custom_Compo.CustomTextview
                    android:id="@+id/hours_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1 Hour"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_15_sp"
                    android:layout_alignParentTop="true"
                    android:layout_toLeftOf="@+id/imageView4"
                    android:layout_toStartOf="@+id/imageView4" />


            </RelativeLayout>

        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="@dimen/_20dp"
            android:layout_marginRight="@dimen/_20dp"
            android:background="@color/colorgray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_10dp"
            android:layout_marginLeft="@dimen/_20dp"
            android:layout_marginRight="@dimen/_20dp"
            android:layout_marginTop="@dimen/_10dp"
            android:orientation="horizontal"
            android:weightSum="2">


            <com.servicehub.Custom_Compo.CustomTextview
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:orientation="horizontal"
                android:text="Total Cost"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_15_sp" />


            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:gravity="right">

                <TextView
                    android:id="@+id/tv_cost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="90.00"
                    android:textColor="@color/colorGreen"
                    android:textSize="@dimen/_13_sp"
                    android:textStyle="bold" />

                <com.servicehub.Custom_Compo.CustomTextview_Rupee
                    android:id="@+id/tv_rupee_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/__3dp"
                    android:layout_toLeftOf="@id/tv_cost"
                    android:textColor="@color/colorGreen"
                    android:textSize="@dimen/_12_sp" />

            </RelativeLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="@dimen/_20dp"
            android:layout_marginRight="@dimen/_20dp"
            android:background="@color/colorgray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_10dp"
            android:layout_marginLeft="@dimen/_20dp"
            android:layout_marginRight="@dimen/_20dp"
            android:layout_marginTop="@dimen/_10dp"
            android:orientation="horizontal"
            android:weightSum="2">


            <com.servicehub.Custom_Compo.CustomTextview
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:orientation="horizontal"
                android:text="Select Date"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_15_sp" />


            <RelativeLayout
                android:id="@+id/rr_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:gravity="right">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="@dimen/_10dp"
                    android:layout_height="@dimen/_10dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_5dp"
                    android:src="@drawable/down" />

                <com.servicehub.Custom_Compo.CustomTextview
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toLeftOf="@+id/imageView5"
                    android:background="@android:color/transparent"
                    android:text="Select Date"
                    android:textColor="@android:color/black"
                    android:textColorHint="@android:color/black"
                    android:textSize="@dimen/_15_sp" />


            </RelativeLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="@dimen/_20dp"
            android:layout_marginRight="@dimen/_20dp"
            android:background="@color/colorgray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_10dp"
            android:layout_marginLeft="@dimen/_20dp"
            android:layout_marginRight="@dimen/_20dp"
            android:layout_marginTop="@dimen/_10dp"
            android:orientation="horizontal"
            android:weightSum="2">


            <com.servicehub.Custom_Compo.CustomTextview
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:orientation="horizontal"
                android:text="Select Time"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_15_sp" />


            <com.servicehub.Custom_Compo.CustomTextview
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:gravity="right"
                android:orientation="horizontal"
                android:text="11:30 a.m - 1:00 p.m"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_15_sp"
                android:id="@+id/txt_time" />

        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/r_book"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50dp"
        android:background="@color/colorGreen"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <com.servicehub.Custom_Compo.CustomTextview
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="BOOK"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_18_sp" />

    </RelativeLayout>

</RelativeLayout>
